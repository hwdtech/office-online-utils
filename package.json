{
  "name": "office-online-utils",
  "version": "1.0.0",
  "description": "Utility set for easy Office Online integration",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:hwdtech/office-online-utils.git"
  },
  "author": "Maxim Malov <mmalov@hwdtech.ru>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "8.9.x"
  },
  "scripts": {
    "lint": "eslint ./discovery index.js --fix",
    "test": "npm run lint && jest",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-runner-eslint": "^0.3.0",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "-test\\.js$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "discovery/**/*.js",
      "index.js",
      "!**/node_modules/**"
    ]
  }
}
